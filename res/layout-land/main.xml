<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ListaCompraButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/list"
            android:drawablePadding="15.0sp"
            android:gravity="left|center_vertical"
            android:text="Nueva lista"
            android:textStyle="bold" />

        <Button
            android:id="@+id/VerListasButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/view"
            android:drawablePadding="15sp"
            android:gravity="left|center_vertical"
            android:text="Ver listas"
            android:textStyle="bold" />

        <Button
            android:id="@+id/RecetaButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/receta_icon"
            android:drawablePadding="15.0sp"
            android:gravity="left|center_vertical"
            android:text="Nueva Receta"
            android:textStyle="bold" />

        <Button
            android:id="@+id/VerRecetasGuardadasButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/view"
            android:drawablePadding="15.0sp"
            android:gravity="left|center_vertical"
            android:text="Ver Recetas"
            android:textStyle="bold"
            android:onClick="verRecetasGuardadasOnClick" />
    </LinearLayout>

	<ImageView
	    android:id="@+id/imagenRecetas"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/recetas_land" />

</LinearLayout>